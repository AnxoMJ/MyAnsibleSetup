---
- name: Updates all packages
  hosts: all
  tasks:
     - name: Update cache and apps
       pacman:
        update_cache: yes
        upgrade: yes
     - name: Removes unused packages dependencies
       ansible.builtin.shell: |
          pacman -Rcs $(pacman -Qdtq)
          exit 0
     - name: print output_shell
       ansible.builtin.debug:
        var: output_shell